{% extends '_base.html.twig' %}
{% block pageTitle %} Update Bib {% endblock %}


{% block main %}
    <main>
        <h3><i>{{ message }}</i></h3>
        <br>
        <a class="button" href="/viewRefs">-- Return to List of Bibs --</a>
        <br>
        <br>
        <form action="/publishModifiedBib/{{ bib.id }}" method="post">
            <table>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Summary</th>
                    <th>Publish</th>
                </tr>

                <tr>
                    <td>{{ bib.id }}</td>
                    <td><input type="text" value="{{ bib.title }}" name="bibTitle"></td>
                    <td><input type="text" value="{{ bib.Summary }}" name="bibSummary"></td>
                    <td><input type="submit" value = "publish"></td>
                </tr>
            </table>
        </form>
        <br>

    </main>
{% endblock %}