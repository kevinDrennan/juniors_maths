{% extends '_base.html.twig' %}
{% block pageTitle %} Update Bib {% endblock %}


{% block main %}
    <main>
        <h3><i>{{ message }}</i></h3>
        <br>
        <a class="button" href="/modifyUsersBibsIndex">-- Return to users bibs --</a>
        <br>
        <br>
        <form action="/updateBib/{{ bib.id }}" method="post">
            <table>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Summary</th>
                    <th>Status</th>
                    <th>Creator Id</th>
                    <th></th>
                </tr>

                <tr>
                    <td>{{ bib.id }}</td>
                    <td><input type="text" value="{{ bib.title }}" name="bibTitle"></td>
                    <td><input type="text" value="{{ bib.Summary }}" name="bibSummary"></td>
                    <td>
                        <select name="accepted" required>
                            <option value = 0>Private</option>
                            <option value = 1>Public</option>
                        </select>
                    </td>
                    <td>{{ bib.creatorId }}</td>
                    <td><input type="submit" value = "update"></td>
                </tr>
            </table>
        </form>
        <br>
        <table>
            <tr>
                {% for ref in refsForBib %}
                    <th>Ref Title</th>
                    <th>Ref Summary</th>
                    <th>Delete Ref</th>
                {% endfor %}
            </tr>
            <tr>
                {% for ref in refsForBib %}
                    <td>{{ ref.title }}</td>
                    <td>{{ ref.summary }}</td>
                    <td><a href="/deleteRefFromBib/{{ ref.id }}/{{ bib.id }}">Delete from Bib</a></td>
                {% endfor %}
            </tr>
        </table>

    </main>
{% endblock %}